<Window x:Class="FanShop.Login1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hello admin" Height="240.831" Width="349.827" ResizeMode="CanMinimize">
    <Grid Margin="0,0,-8,2">
        <Label Content="Username:" HorizontalAlignment="Left" Margin="66,81,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="72,112,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="140,81,0,0" TextWrapping="Wrap" Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="176" TabIndex="1"/>
        <Button Content="Sign in" HorizontalAlignment="Left" Height="23" Margin="241,166,0,0" VerticalAlignment="Top" Width="75" Command="{Binding Path=Login}" TabIndex="3"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="140,112,0,0" TextWrapping="Wrap" Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="176" TabIndex="2"/>

    </Grid>
</Window>
