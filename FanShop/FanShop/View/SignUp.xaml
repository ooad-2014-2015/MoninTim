<Window x:Class="FanShop.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SignUp" Height="405.165" Width="500.436" ResizeMode="CanMinimize">

    <Grid Margin="0,0,2,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Ime i prezime:" HorizontalAlignment="Left" Margin="90,72,0,0" VerticalAlignment="Top" Width="91" Height="26"/>
        <Label Content="  Username:" HorizontalAlignment="Left" Margin="101,103,0,0" VerticalAlignment="Top" Width="80" Height="26" RenderTransformOrigin="0.351,0.543"/>
        <Label Content=" Broj telefona:" HorizontalAlignment="Left" Margin="90,134,0,0" VerticalAlignment="Top" Width="91" Height="26" RenderTransformOrigin="0.351,0.543"/>
        <Label Content=" e-mail:" HorizontalAlignment="Left" Margin="125,165,0,0" VerticalAlignment="Top" Width="56" Height="26" RenderTransformOrigin="0.351,0.543"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="186,71,0,0" TextWrapping="Wrap" Text="{Binding Path=Clan.ime_prezime}" VerticalAlignment="Top" Width="171"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="186,104,0,0" TextWrapping="Wrap" Text="{Binding Path=Clan.username}" VerticalAlignment="Top" Width="171"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="186,136,0,0" TextWrapping="Wrap" Text="{Binding Path=Clan.broj_telefona}" VerticalAlignment="Top" Width="171"/>
        <TextBox Text="{Binding Path=Clan.email}" HorizontalAlignment="Left" Height="23" Margin="186,167,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="171"/>
        <Label Content="password:" HorizontalAlignment="Left" Margin="112,196,0,0" VerticalAlignment="Top" Width="69" Height="26" RenderTransformOrigin="0.351,0.543"/>
        <PasswordBox HorizontalAlignment="Left" Margin="186,198,0,0" VerticalAlignment="Top" Width="171" Height="24"/>
        <Button Content="Registruj se" HorizontalAlignment="Left" Margin="263,263,0,0" VerticalAlignment="Top" Width="94" Height="22"/>
        <Label Content="Ukoliko se registrujete, omogućili ste sebi mnoge pogodnosti kao što su popusti i pokloni." HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top" Width="487"/>
        <Button Content ="Na početnu" Width="94" Height="24" Margin="263,318,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="Button_Click"/>
    </Grid>
</Window>
